<div class="container" style="margin-top: 200px;">

    <div class="row">
        <div class="col">
            <p class="text-center">
                <span>hola {{usuario}}!!</span>
                    <a href="/admin/login/logout" class="btn btn-danger"> cerrar sesion <i class="fasfa-sing-out-alt"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7">
            <h2>listado de novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">titulo</th>
                        <th scope="col" class="text-right">acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


</div>